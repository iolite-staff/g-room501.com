function update_day(){

	$dat[0] = date('Y.m.d　H:i');

	//ファイルWrite
	$path = DATPATH."update_day.txt";
	if(!file_write($path,1,$dat)){
		print("File read error!!( ".$path." )<BR>\n");
	}
}

